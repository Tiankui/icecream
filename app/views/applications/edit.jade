div(class='bread') 应用设置
table(class='table',id='edit_app_form')
  tr
    td 应用名称
    td 
      input(id='id',type='hidden',value=apps[0].id)
      input(id='app_name',type='text',class='txt',value=apps[0].app_name)
  tr
    td 应用类型
    td 
      select(id='app_type')
        - for(var i=0;i<app_types.length;i++)
          option(value=app_types[i].id,selected=(apps[0].app_type == app_types[i].id?true:false)) #{app_types[i].type_name}
  tr
    td
    td
      button(class='btn',onclick='edit_app();') 保存变更 
      &nbsp;&nbsp;&nbsp;
      button(class='btn',onclick='hide_edit();') 取消     

script(type='text/javascript')    
    function edit_app(){
      var id = $('#id','#edit_app_form').val();
      var app_name = $('#app_name','#edit_app_form').val();
      var app_type = $('#app_type','#edit_app_form').val();

      loading();
      $.post('/applications/edit','smt=true&id='+id+"&app_name="+app_name+"&app_type="+app_type,function(data){
          hideLoading();
          if(data.indexOf("success")!=-1){
            noty({
              timeout: 1000,force: true, text: '操作成功!', type: 'success',
              onClose:function(){
                location.reload();
              }
            });
          }else{
            noty({timeout: 1000,force: true, text: '操作失败!', type: 'error'});
          }
      },"html");
    } 

    function hide_edit(){
          $.sheetbox.close('right');
    } 
